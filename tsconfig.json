{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",

		"outDir": "build/js",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"skipLibCheck": true
	},
	"include": ["./src/**/*"]
}
